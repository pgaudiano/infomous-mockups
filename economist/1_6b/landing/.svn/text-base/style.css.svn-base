/* $Id: style.css,v 1.23 2007/12/17 15:05:09 goba Exp $ */

.fb_edge_widget_with_comment{
    position: relative;
    top: 2px;
}

#news-tabs{
    height: 25px;
    clear:both;
    margin-bottom: 18px;
}

#news-tabs a{
    display: inline-block;
    height: 20px;
    margin: 2px;
    padding: 4px 10px 0;
    border: 1px solid #999;
    font-weight: bold;
    background-color: #3B6614;
    color: #FFF !important;
    -moz-box-shadow: 1px 1px 3px #666;
    -webkit-box-shadow: 1px 1px 3px #666;
    box-shadow: 1px 1px 3px #666;
}

#news-tabs a.current{
    background-color: #FFF;
    color: #3B6614 !important;
}

#news-tabs a:hover {
    background-color: #53991E;
    text-decoration: none;
}

#news-tabs a:active {
    background-color: #ccc;
}

#list-spaced li {
    margin-top: 1em;
}

#help-page {
    width: 880px;
    font-size: 14px;
}

#help-page h1 {
    border-bottom: 1px solid #ccc;
    margin-top: 2em;
    font-size: 18px;
}

#help-page h2 {
    margin-top: 1em;
    margin-left: 10px;
    font-size: 16px;
}

#help-page h3 {
    margin-left: 20px;
    text-decoration: underline;
    font-size: 14px;
}

#help-page ol > li {
    margin-top: 1em;
}

#help-page p {
    font-size: 14px;
}

.twtr-hd {
    display: none;	
}
.twtr-tweet {
    border-bottom: 1px solid #ccc;
}
.twitter-share-button{
    position: relative;
    top: 2px;
}
ul.social-links{
    margin: 0;
    padding: 0;
}
ul.social-links li{
    display: inline;
}
.feed-list li{
    font-size: 10px;
}
table.cloud-list{
    width: 770px;
}
table.cloud-list td{
    width: 385px;
    padding: 0 5px;
    vertical-align:top;
}
td.active {
    color: #333;
}
table.cloud-data{
    width: 770px;
    margin-bottom: 30px;
}
td.data-cell{
    text-align: right;
    font-size: 10px;
    color: #666;
    vertical-align: top;
}
.button {
    margin-left: 4px;
}
.buttons a img.button_on {
    display: none;
}
.buttons a img.button_off {
    display: inline;
}
.buttons a:hover img.button_on {
    display: inline;
}
.buttons a:hover img.button_off {
    display: none;
}
.buttons a:hover {
    text-decoration: none;
}

.flash-caption {
    font-family: Arial, Helvetica, sans-serif;
    color: #3B6614;
    background-color: #eee;
    margin-bottom:3px;
    padding:5px;
    font-weight: normal;
}
.cloud-title {
    font-family: Arial, Helvetica, sans-serif;
    color: #3B6614;
    background-color: #eee;
    margin: 0 0 3px 0;
    padding: 0;
    font-size: 13px !important;
}
.cloud-title-table td{
    padding: 5px;
    vertical-align: bottom;
}

.badge-title {
    font-weight: bold;
}
.badge-desc {
    font-size: 10px;
}
#movie, .cloud-thumb {
    border: 1px solid #999;
    line-height: 0;
}
.cloud-thumb{
    float: left;
    margin:2px 10px 5px 0pt;
}

.teaser-content{
    font-size: 11px;
}
.home-block{
    width: 880px !important;
    text-align: left;
}
table#home-table{
    margin: 5px 0 10px 0;
}
#home-table td{
    vertical-align: bottom;
    /*padding: 8px;*/
}
/*#home-table embed{*/
#home-table .infomous-widget {
    padding: 0;
    margin: 8px 8px 4px 8px;
    border: 1px solid #3B6614;
    background-color: #FAFAFA;
    -moz-box-shadow: 1px 1px 2px #999;
    -webkit-box-shadow: 1px 1px 2px #999;
    box-shadow: 1px 1px 2px #999;
}
.infomous-widget{
    margin: 6px;
}
#home-table embed {
    margin:0;
    padding: 0;
    border: none;
}
#home-table img{
    margin: 8px;
}
#home-table .flash-caption{
    background-color: #EEE;
    padding: 4px;
    margin: 0 8px 16px 8px;
}
.home-text {
    width: 880px;
    font-size: 16px;
    color: #1E450C;
}
.operations, .submitted{
    color: #aaa;
    font-size: 11px;
}
.operations {
    margin: 1em 0;
}
li a.active {
    color: #666;
}
ul.primary li a {
    background-color: #ccc;
}
ul.primary li a.active, ul.primary li a:hover {
    background-color: #bbb;
}
.feed-trigger {
    color: #A60008;
}
.tooltip {
    display: none;
    background-color: #bbb;
    border: 1px solid #999;
    width: 280px;
    height: 200px;
    overflow-y: auto;
    padding: 8px;
    -moz-box-shadow: 3px 3px 3px #222;
    -webkit-box-shadow: 3px 3px 3px #222;
    box-shadow: 3px 3px 3px #222;
}
.tooltip h4{
    margin-top: 0;
}



/*
 ** HTML elements
 */
body {
    margin: 0;
    padding: 0;
    color: #333;
    background-color: #FFF;
    font: 76% Verdana, Arial, Helvetica, sans-serif;
}
tr.odd td, tr.even td {
    padding: 0.3em;
}
tr.even, tr.odd {
    background-color: #ccc;
    border-bottom: 1px solid #666;
    padding: 0.1em 0.6em;
}
tbody{
    border-top: none;
}
h1, h2, h3, h4, h5, h6 {
    margin-bottom: 0.5em;
}
h1 {
    font-size: 20px;
}
h2 {
    font-size: 16px;
}
h3, h4, h5, h6 {
    font-size: 1.1em;
}
h1.title, h2.title{
    font-family: Arial, Helvetica, sans-serif;
    color: #3B6614;
    border-bottom: 1px solid #A60008;
    margin-bottom:3px;
    padding:3px;
    font-weight: normal;
}

h1.title a, h2.title a{

}
p {
    margin-top: 0.5em;
    margin-bottom: 0.9em;
}
a {
    text-decoration: none;
}
a:link {
    color: #3B6614;
}
a:visited {
    color: #4A8019;
}
a:hover {
    color: #53991E;
    text-decoration: underline;
}
fieldset {
    border: 1px solid #ccc;
}
pre {
    background-color: #eee;
    padding: 0.75em 1.5em;
    font-size: 12px;
    border: 1px solid #ddd;
}
table {
    /* make <td> sizes relative to body size! */
    font-size: 1em;
}
.form-item label {
    font-size: 1em;
    color: #666;
}
.item-list .title {
    font-size: 1em;
    color: #666;
}
.links {
    margin-bottom: 0;
}
.comment .links {
    margin-bottom: 0;
}

/*
 ** Page layout blocks / IDs
 */
#header {
    background-image: url(img/back_top.png);
    background-repeat: repeat-x;
    height: 110px;
    width: 100%;
}
#header td{
    vertical-align: bottom;
}
td#logo {
    width: 360px;
}
td#menu{
    width: 400px;
}
#logo img {
    border: 0;
    margin: 0 0 0 20px;
}
#menu {
    padding: 0.5em 0.5em 3px 0.5em; /* LTR */
    text-align: right; /* LTR */
    vertical-align: middle;
}
#navlist {
    font-size: 14px;
    padding-bottom: 22px;
    color: #2f3d2a;
    font-family: Arial, Helvetica, sans-serif;
}
#navlist a {
    color: #fff;
    text-decoration: none;
}
ul.links li {
    border-left: 1px solid #aaa; /* LTR */
}
ul.links li a{
    color: #a33;
}
ul.links li.first {
    border: none;
}
#search{
    margin-bottom: 26px;
}
#search .form-text, #search .form-submit {
    background-color: transparent;
    border: 1px solid #B0D890;
    color: #FFF;
    font-size: 11px;
    height: 17px;;
    vertical-align: middle;
}
#search .form-text {
    width: 10em;
    padding: 0 0.5em;
    height: 15px;
}
#mission {
    background-color: #369;
    padding: 1.5em 2em;
    color: #fff;
}
#mission a, #mission a:visited {
    color: #9cf;
    font-weight: bold;
}
.site-name {
    margin: 0.6em 0 0 ;
    padding: 0;
    font-size: 2em;
}
.site-name a:link, .site-name a:visited {
    color: #fff;
}
.site-name a:hover {
    color: #369;
    text-decoration: none;
}
.site-slogan {
    font-size: 1em;
    color: #eee;
    display: block;
    margin: 0;
    font-style: italic;
    font-weight: bold;
}
#main {
    margin-left: 10px;
    max-width: 920px;
}
#mission, .node .content, .comment .content {
    line-height: 1.4em;
}
#help {
    font-size: 0.9em;
    margin-bottom: 1em;
}
.breadcrumb {
    margin-bottom: .5em;
}
.messages {
    background-color: #CCC;
    border: 1px solid #666;
    padding: 0.3em;
    margin-bottom: 1em;
}
.error {
    border-color: red;
}
#sidebar-left, #sidebar-right {
    width: 16em;
    /* padding in px not ex because IE messes up 100% width tables otherwise */
    padding: 10px;
    vertical-align: top;
}
#footer {
    background-color: #444;
    color: #ddd;
    border-top: 1px solid #999;
    padding: 1em;
    font-size: 0.8em;
    margin-top: 20px;
}
#footer a{
    color: #A2FA61;
}

/*
 ** Common declarations for child classes of node, comment, block, box, etc.
 ** If you want any of them styled differently for a specific parent, add
 ** additional rules /with only the differing properties!/ to .parent .class.
 ** See .comment .title for an example.
 */
.links {
    color: #999;
}
.block, .box {
    padding: 0 0 1.5em 0; /* LTR */
}
.block {
    border-bottom: 1px solid #bbb;
    padding-bottom: 0.75em;
    margin-bottom: 1.5em;
}
.block .title {
    margin-bottom: .25em;
}
.box .title {
    font-size: 1.1em;
}
.node {
    margin: .5em 0 2em; /* LTR */
}
.sticky {
    padding: .5em;
    background-color: #eee;
    border: solid 1px #ddd;
}
.node .taxonomy {
    color: #999;
    font-size: 10px;
}
.comment {
    border: 1px solid #abc;
    padding: .5em;
    margin-bottom: 1em;
}
.comment .title a {
    font-size: 1.1em;
    font-weight: normal;
}
.comment .new {
    text-align: right; /* LTR */
    font-weight: bold;
    font-size: 0.8em;
    float: right; /* LTR */
    color: red;
}
.comment .picture {
    border: 1px solid #abc;
    float: right; /* LTR */
    margin: 0.5em;
}
#comment-form{
    width: 400px;
}
#edit-comment{
    height: 120px;
}

/*
 ** Module specific styles
 */
#aggregator .feed-source {
    background-color: #eee;
    border: 1px solid #ccc;
    padding: 1em;
    margin: 1em 0;
}
#aggregator .news-item .categories, #aggregator .source, #aggregator .age {
    color: #999;
    font-style: italic;
    font-size: 0.9em;
}
#aggregator .title {
    margin-bottom: 0.5em;
    font-size: 1em;
}
#aggregator h3 {
    margin-top: 1em;
}

#profile .profile {
    clear: both;
    border: 1px solid #abc;
    padding: .5em;
    margin: 1em 0em;
}
#profile .profile .name {
    padding-bottom: 0.5em;
}
.block-forum h3 {
    margin-bottom: .5em;
}
div.admin-panel .description {
    color: #999;
}
div.admin-panel .body {
    background: #ddd;
}
div.admin-panel h3 {
    background-color: #333;
    color: #fff;
    padding: 5px 8px 5px;
    margin: 0;
}
